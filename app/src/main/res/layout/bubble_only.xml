<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.notifications.screen.OverlayServiceCommon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_below="@+id/status_bar_filler"
    android:layout_centerHorizontal="true"
    android:animateLayoutChanges="true"
    android:onClick="onPopupClick">


    <TextView
        android:id="@+id/pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:baselineAligned="false">








            <RelativeLayout
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3_b"

                >
                <RelativeLayout
                    android:id="@+id/imageView3"
                    android:paddingLeft="3.0dip"
                    android:paddingRight="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:background="@drawable/shape_chat_mine_green"
                        android:textColor="@color/ChatText"
                        android:id="@+id/notification_subtitle"
                        android:paddingLeft="10.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingBottom="20.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=" Hi Gourav"
                        android:lineSpacingExtra="1.0dip"
                        style="@style/ReadTheme_Dark_TextAppearance.Small"
                        android:textSize="@dimen/text_size_notification_text"

                        />
                    <ImageView
                        android:orientation="horizontal"
                        android:id="@+id/img_receive_timer"
                        android:background="@drawable/ic_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.0dip"
                        android:layout_marginRight="65.0dip"
                        android:layout_marginBottom="7.0dip"
                        android:layout_alignRight="@+id/notification_subtitle"
                        android:layout_alignBottom="@+id/notification_subtitle"
                        android:contentDescription="@string/app_name" />


                    <TextView android:textSize="12.0sp"
                        android:textColor="@color/LightGrey"
                        android:id="@+id/timeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:text="02:34PM"
                        android:layout_alignRight="@+id/notification_subtitle"
                        android:layout_alignBottom="@+id/notification_subtitle"




                        style="@style/ReadTheme_Dark_TextAppearance.Small"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/imageView1"
                    android:padding="2.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <FrameLayout
                        android:id="@+id/bg_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/bgMyImage"
                            android:padding="2.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/notification_icon"
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"



                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerInside"
                         />
                        <ImageView
                            android:layout_width="@dimen/notification_ic_small_size"
                            android:layout_height="@dimen/notification_ic_small_size"
                            android:id="@+id/notification_icon_small"
                            android:src="@drawable/ic_stat_headsup" />
                    </FrameLayout>


                    <TextView

                        android:textColor="@color/white"
                        android:layout_gravity="top"
                        android:id="@+id/notification_title"
                        android:background="@drawable/shape_chat_user_name_bg"
                        android:paddingTop="4.0dip"
                        android:paddingRight="15.0dip"
                        android:paddingBottom="6.0dip"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-15.0dip"
                        android:text="Gourav"


                        android:textSize="@dimen/text_size_notification_title"
                        android:focusable="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"


                        />



                </LinearLayout>


            </RelativeLayout>





        </LinearLayout>


        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/notification_dismiss"
            android:textColor="@color/notification_btn_text_color_light"
            android:singleLine="true"
            android:onClick="doStop"
            android:longClickable="true"
            android:layout_gravity="right"
            android:minWidth="0dp"
            android:src="@drawable/ic_dismiss_white"
            android:clickable="true"
            android:paddingTop="-10dp"
            android:contentDescription="@string/reader_btn_dismiss"
            android:visibility="gone" />





    </FrameLayout>


